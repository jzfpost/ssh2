{
    "name": "jzfpost/ssh2",
    "description": "SSH2 connection helper",
    "keywords": [
        "php",
        "ssh2"
    ],
    "license": "MIT",
    "type": "ssh2-helper",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Eugenith",
            "email": "jzf@mail.ru"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/log": "*",
        "ext-mbstring": "*",
        "ext-ssh2": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.16",
        "vimeo/psalm": "^4.18",
        "jetbrains/phpstorm-attributes": "dev-master",
        "spatie/phpunit-watcher": "^1.23",
        "rector/rector": "^0.14.8"
    },
    "autoload": {
        "psr-4": {
            "jzfpost\\ssh2\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "jzfpost\\ssh2\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
